<html>
<head>
    <title>Post Detail Page</title>
</head>
<body>
    <h1><%= @post.name %></h1>
    <h3><%= @post.content %></h3>
    
    <form action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Post" id="delete">
    </form>

</body>
</html>